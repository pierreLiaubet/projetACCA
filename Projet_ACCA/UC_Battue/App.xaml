<Application x:Class="UC_Battue.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UC_Battue"
             StartupUri="AcceuilBattue.xaml">
    <Application.Resources>
        <Style TargetType="DockPanel" x:Key="DockP">
            <Setter Property="Background" Value="DarkGray"/>
        </Style>
        <Style TargetType="Button" x:Key="Butt">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Border.CornerRadius" Value="20"/>
        </Style>
        <Style TargetType="ListBox" x:Key="LB">
            <Setter Property="Background" Value="LightGray"/>
        </Style>
        <Style TargetType="Window" x:Key="Win">
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontFamily" Value="Verdana"/>
        </Style>
    </Application.Resources>
</Application>
